<?xml version="1.0" encoding="utf-8"?>
<com.android.launcher3.assistant.AssistCalendarEvent
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/assist_calendar_event_item_height"
    android:layout_marginTop="@dimen/calendar_event_margin"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/assist_calendar_event_time_view_width"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_weight="1"
            android:id="@+id/event_start_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="20:20"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/event_end_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="21:20"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/event_all_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:text="All day" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="New event" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/event_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="Ongoing" />
    </LinearLayout>
</com.android.launcher3.assistant.AssistCalendarEvent>