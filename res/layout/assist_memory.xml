<com.android.launcher3.assistant.AssistMemoryStatus
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assist_memory"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/assist_item_top_margin"
    android:background="@drawable/round_rect_assist_views"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:text="@string/memory_string"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:text="@string/available_string"/>
    <TextView
        android:id="@+id/memory_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="1.7GB/4GB"/>
</com.android.launcher3.assistant.AssistMemoryStatus>