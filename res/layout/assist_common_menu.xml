<com.android.launcher3.assistant.AssistMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:clipToPadding="true"
    android:clipChildren="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_assist_views"
    android:orientation="vertical">

    <Button
        android:id="@+id/assist_menu_pin_on_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:background="@drawable/menu_item_background"
        android:textAllCaps="false"
        android:text="@string/menu_item_pin_on_top" />

    <Button
        android:id="@+id/assist_menu_unpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:background="@drawable/menu_item_background"
        android:textAllCaps="false"
        android:text="@string/menu_item_unpin" />

    <Button
        android:id="@+id/assist_menu_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:background="@drawable/menu_item_background"
        android:textAllCaps="false"
        android:text="@string/menu_item_settings" />

</com.android.launcher3.assistant.AssistMenuLayout>